<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <label><%= last_updated @post %></label>

<% if @post.errors[:title].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

<% if @post.errors[:content].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
