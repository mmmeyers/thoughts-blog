<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', post %></td>

        <td>
          <% if can? :update, post %>
            <%= link_to 'Edit', edit_post_path(post) %></td>
          <% end %>
        </td>

        <td>
          <% if can? :destroy, post %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if can? :create, Post %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>


<h4><% if can? :create, User %>
  <h3>Admin Only</h3>
  <%= link_to 'Users', users_path %>
<% end %></h4>

