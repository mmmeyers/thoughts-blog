<div class="container-fluid">

<h4 class="text-muted m-b-2"><%= @comment.user.name %> commented: <%= @comment.content %></h4>



<% if can? :edit, Comment %>
  <p><%= link_to 'Edit comment', edit_post_comment_path(@post, @comment) %> | 
<% end %>

<% if can? :destroy, Comment %>
  <%= link_to 'Delete comment', post_comment_path(@post, @comment), :method => :delete, data: { confirm: 'Are you sure?' } %> | 
<% end %>

<%= link_to "Back", posts_path %></p>

</div>